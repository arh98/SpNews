@page
@model SpNews.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<h3>Delete a Post</h3>
<hr />
<form method="post">
    <dl class="dl-horizontal">
        <dd><label asp-for="ToDeleteNews.Name"></label></dd>
        <dt>
            <input asp-for="ToDeleteNews.Name" class="form-control" readonly />
            <span asp-validation-for="ToDeleteNews.Name"></span>
        </dt>
        <dd><label asp-for="ToDeleteNews.Description"></label></dd>
        <dt>
            <textarea asp-for="ToDeleteNews.Description" class="form-control" readonly></textarea>
            <span asp-validation-for="ToDeleteNews.Description"></span>
        </dt>


        <dd><label>Picture</label></dd>
        <dt>
            <img src="/images/@(Model.ToDeleteNews.Id).jpg" style="max-width: 200px" />
        </dt>
        <dd></dd>
        <dt>
            <input type="hidden" asp-for="ToDeleteNews.Id" />
            <input type="submit" class="btn btn-danger" value="Delete" />
        </dt>
    </dl>
</form>
