<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpNews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="~/css/footerStyleSheet.css" rel="stylesheet" />
    <link href="~/css/navBarStyleSheet.css" rel="stylesheet" />
    <link href="~/css/homePageStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="margin-bottom: 30px;background-color:#06283D">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="margin-left: 50px;margin-right: 35px">SportNews</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#myNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="margin-left: 10px">
                                <a class="nav-link ">@User.Identity.Name Wellcome !</a>
                            </li>
                            <li class="nav-item " style="margin-left: 10px">
                                <a class="nav-link" href="/userProfile.html" >Profile</a>
                            </li>
                            <li class="nav-item " style="margin-left: 10px">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">LogOut</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="margin-left: 10px">
                                <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                            </li>
                            <li class="nav-item" style="margin-left: 10px">
                                <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                            </li>
                        }
                        <li class="nav-item" style="margin-left: 10px">
                            <a class="nav-link" asp-action="ContactUs" asp-controller="Home">Contact Us</a>
                        </li>
                        <li class="nav-item dropdown" style="margin-left: 10px">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">NewsGroup</a>
                            <ul class="dropdown-menu submenu">
                                <li><a class="dropdown-item" href="/Group/6/Trending">Trending</a></li>
                                <li><a class="dropdown-item" href="/Group/7/Latest">Latest</a></li>
                                <li><a class="dropdown-item" href="/Group/1/Foreign">Foreign</a></li>
                                <li><a class="dropdown-item" href="/Group/2/Domestic">Domestic</a></li>
                                <li><a class="dropdown-item" href="/Group/3/Football">Football</a></li>
                                <li><a class="dropdown-item" href="/Group/4/Basketball">Basketball</a></li>
                                <li><a class="dropdown-item" href="/Group/5/Volleyball">Volleyball</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <button class="btn float-end mx-4 searchBtn" data-bs-toggle="collapse" data-bs-target="#collapseSearchSection" style=""><i class="fa fa-search"></i></button>
            </div>
        </nav>
        <div class="container mb-5 collapse" id="collapseSearchSection">
            <div class="row d-flex justify-content-center text-white">
                <div class="col-md-9">
                    <div class="card mt-3 collapseSection" style="padding: 30px 30px 90px 30px;border-radius: 20px">
                        <h3 class="heading mt-5 text-center">Hi! How can we help You?</h3>
                        <div class="d-flex justify-content-center px-5">
                            <div class="search">
                                <input type="text" class="search-input" placeholder="Search..." name="">
                                <a href="#" class="btn float-end searchBtn2"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
    <footer class="text-center text-lg-start mt-5">
        <div class="container p-4 pb-0">
            <section class="">
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">SKY-SPORT</h6>
                        <p>
                            Here you can use rows and columns to organize your footer
                            content. Lorem ipsum dolor sit amet, consectetur adipisicing
                            elit.
                        </p>
                    </div>
                    <hr class="w-100 clearfix d-md-none" />
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Products</h6>
                        <p><a class="footerLink">MDBootstrap</a></p>
                        <p><a class="footerLink">MDWordPress</a></p>
                        <p><a class="footerLink">BrandFlow</a></p>
                        <p><a class="footerLink">Bootstrap Angular</a></p>
                    </div>
                    <hr class="w-100 clearfix d-md-none" />
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Useful links</h6>
                        <p><a class="footerLink">Your Account</a></p>
                        <p><a class="footerLink">Become an Affiliate</a></p>
                        <p><a class="footerLink">Shipping Rates</a></p>
                        <p><a class="footerLink">Help</a></p>
                    </div>
                    <hr class="w-100 clearfix d-md-none" />
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                        <h6 class="text-uppercase mb-4 font-weight-bold">Contact</h6>
                        <p><i class="fas fa-home mr-3"></i> New York, NY 10012, US</p>
                        <p><i class="fas fa-envelope mr-3"></i> sport@news.com</p>
                        <p><i class="fas fa-phone mr-3"></i> + 01 234 567 89</p>
                        <p><i class="fas fa-print mr-3"></i> + 01 234 567 89</p>
                    </div>
                </div>
            </section>
            <hr class="my-3">
            <section class="p-3 pt-0">
                <div class="row d-flex align-items-center">
                    <div class="col-md-7 col-lg-8 text-center text-md-start">
                        <div class="p-3">
                            © 2022 Copyright:
                            <a class="footerLink" href="/Home/Privacy">SportNews.com</a>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4 ml-lg-0 text-center text-md-end">
                        <a class="btn btn-outline-light btn-floating m-1 footerBtnLink" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-outline-light btn-floating m-1 footerBtnLink" role="button">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn btn-outline-light btn-floating m-1 footerBtnLink" role="button">
                            <i class="fab fa-google"></i>
                        </a>
                        <a class="btn btn-outline-light btn-floating m-1 footerBtnLink" role="button">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
