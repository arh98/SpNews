
@{
    ViewData["Title"] = "Detailed";
}

<section>
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar"
                                 width="60"
                                 height="60" />
                            <div>
                                <h6 class="fw-bold mb-1">Lily Coleman</h6>
                                <p class="text-muted small mb-0">
                                    Shared publicly - Jan 2020
                                </p>
                            </div>
                        </div>
                        <img src="https://www.w3schools.com/bootstrap5/chicago.jpg" class="w-100 h-100 mt-3 img-thumbnail">
                        <p class="mt-3 mb-3 pb-2 mx-3">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                            quis nostrud exercitation ullamco laboris nisi ut aliquip consequat.
                        </p>

                        <div class="small d-flex justify-content-start mx-4">
                            <a href="#" class="btn btn-dark d-flex align-items-center me-3 btn-sm" style="height: 30px">
                                <i class="far fa-thumbs-up me-2"></i>
                                <p class="mb-0">Like</p>
                            </a>
                            <a href="#" class="btn btn-dark d-flex align-items-center me-3 btn-sm" style="height: 30px">
                                <i class="far fa-comment-dots me-2"></i>
                                <p class="mb-0">Comment</p>
                            </a>
                            <a href="#" class="btn btn-dark d-flex align-items-center me-3 btn-sm" style="height: 30px">
                                <i class="fas fa-share me-2"></i>
                                <p class="mb-0">Share</p>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer py-3 border-0 mt-2">
                        <div class="d-flex flex-start w-100">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar"
                                 width="40"
                                 height="40" />
                            <div class="form-outline w-100">

                                <label class="form-label" for="textAreaExample">Write a Comment :</label>
                                <textarea class="form-control" id="textAreaExample" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="float-end mt-2 pt-1">
                            <button type="button" class="btn btn-dark">Post Comment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

