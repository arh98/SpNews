            </div>
        </div>
    </div>
</section>
<div class="text-center">
    <h3 class="display-4">Welcome To SportNews</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <partial name="_BoxNews" model="@item" />
        }
    </div>
</div>
