
@model IEnumerable<News>
@{
    ViewData["Title"] = "Home Page";
}
<div id="demo" class="carousel slide container" data-bs-ride="carousel">

    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/1b.jpg" alt="Ronaldo-photo" class="d-block" style="width:100%">
        </div>
        <div class="carousel-item">
            <img src="/images/4b.jpg" alt="thomas-tuchel-photo" class="d-block" style="width:100%">
            <a href="/"></a>
        </div>
        <div class="carousel-item">
            <img src="/images/5b.jpg" alt="pep-guardiola-photo" class="d-block" style="width:100%">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
<section class="container w-100 grid-container pt-5">
    <div class="item1 card flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-back">
                <h1 style="font-size: 6vw;color: white;-webkit-text-stroke: 2px black;">Volleyball</h1>
                <a style="-webkit-text-stroke: 1px black" class="link-info" href="https://twitter.com/volleyballworld">See Volleyball World twitter</a>
            </div>
        </div>
    </div>
    <div class="item2 card flip-card">
