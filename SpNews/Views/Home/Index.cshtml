@model IEnumerable<News>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Sport-News</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <img src="" alt="News Photo" class="card-img-top img-thumbnail" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <a asp-action="Detailed" asp-controller="Home" asp-route-id="@item.Id">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
